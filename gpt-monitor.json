{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.5.0"
    },
    {
      "type": "panel",
      "id": "piechart",
      "name": "Pie chart",
      "version": ""
    },
    {
      "type": "panel",
      "id": "state-timeline",
      "name": "State timeline",
      "version": ""
    },
    {
      "type": "panel",
      "id": "barchart",
      "name": "Bar chart",
      "version": ""
    },
    {
      "type": "panel",
      "id": "bargauge",
      "name": "Bar gauge",
      "version": ""
    },
    {
      "type": "panel",
      "id": "table",
      "name": "Table",
      "version": ""
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    }
  ],
  "title": "K8s Namespaces \u2014 Landing (Compact Visual)",
  "tags": [
    "kubernetes",
    "namespaces",
    "visual"
  ],
  "style": "dark",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "hide": 0,
        "label": "Prometheus",
        "name": "DS_PROMETHEUS",
        "query": "prometheus",
        "refresh": 1,
        "type": "datasource"
      }
    ]
  },
  "panels": [
    {
      "id": 11,
      "type": "piechart",
      "title": "CPU Share by Namespace (Top 12)",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(12, 100 *\nsum by (namespace) (\n  rate(container_cpu_usage_seconds_total{container!~\"POD|\", image!=\"\"}[5m])\n) / scalar(sum(kube_node_status_allocatable{resource=\"cpu\", unit=~\"core|cores\"})))",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "pieType": "donut",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "displayLabels": [
          "name",
          "percent"
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2
        },
        "overrides": []
      }
    },
    {
      "id": 12,
      "type": "piechart",
      "title": "RAM Share by Namespace (Top 12)",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(12, 100 *\nsum by (namespace) (\n  container_memory_working_set_bytes{container!~\"POD|\", image!=\"\"}\n) / scalar(sum(kube_node_status_allocatable{resource=\"memory\", unit=\"byte\"})))",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "pieType": "donut",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "displayLabels": [
          "name",
          "percent"
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2
        },
        "overrides": []
      }
    },
    {
      "id": 13,
      "type": "state-timeline",
      "title": "CPU Saturation by Namespace (last hour)",
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 0,
        "y": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nsum by (namespace) (\n  rate(container_cpu_usage_seconds_total{container!~\"POD|\", image!=\"\"}[5m])\n) / scalar(sum(kube_node_status_allocatable{resource=\"cpu\", unit=~\"core|cores\"}))",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 30
              },
              {
                "color": "orange",
                "value": 60
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 14,
      "type": "state-timeline",
      "title": "RAM Saturation by Namespace (last hour)",
      "gridPos": {
        "h": 8,
        "w": 16,
        "x": 16,
        "y": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nsum by (namespace) (\n  container_memory_working_set_bytes{container!~\"POD|\", image!=\"\"}\n) / scalar(sum(kube_node_status_allocatable{resource=\"memory\", unit=\"byte\"}))",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 60
              },
              {
                "color": "orange",
                "value": 80
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 15,
      "type": "barchart",
      "title": "Top\u201110 Namespaces \u2014 Network RX (bytes/s)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "(sum by (namespace) (rate(container_network_receive_bytes_total[5m]))) and on(namespace) group_left (topk(10, (sum by (namespace) (rate(container_network_receive_bytes_total[5m]))) + (sum by (namespace) (rate(container_network_transmit_bytes_total[5m])))))",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "orientation": "horizontal",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "xTickLabelRotation": 0,
        "barWidth": 0.8,
        "stacking": "none",
        "showValue": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 1
        },
        "overrides": []
      }
    },
    {
      "id": 16,
      "type": "barchart",
      "title": "Top\u201110 Namespaces \u2014 Network TX (bytes/s)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "(sum by (namespace) (rate(container_network_transmit_bytes_total[5m]))) and on(namespace) group_left (topk(10, (sum by (namespace) (rate(container_network_receive_bytes_total[5m]))) + (sum by (namespace) (rate(container_network_transmit_bytes_total[5m])))))",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "orientation": "horizontal",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "xTickLabelRotation": 0,
        "barWidth": 0.8,
        "stacking": "none",
        "showValue": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 1
        },
        "overrides": []
      }
    },
    {
      "id": 17,
      "type": "bargauge",
      "title": "Top PVCs by Used % (Top 10)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 25
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(10, 100 *\nkubelet_volume_stats_used_bytes\n/ ignoring(persistentvolumeclaim) group_left\nkubelet_volume_stats_capacity_bytes)",
          "legendFormat": "{{namespace}}/{{persistentvolumeclaim}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "displayMode": "basic",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "orange",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 18,
      "type": "table",
      "title": "Pods by Namespace (Now)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 25
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "count by (namespace) (kube_pod_info)",
          "legendFormat": "{{namespace}}",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    }
  ]
}
