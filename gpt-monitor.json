{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.5.0"
    },
    {
      "type": "panel",
      "id": "piechart",
      "name": "Pie chart",
      "version": ""
    },
    {
      "type": "panel",
      "id": "state-timeline",
      "name": "State timeline",
      "version": ""
    },
    {
      "type": "panel",
      "id": "bargauge",
      "name": "Bar gauge",
      "version": ""
    },
    {
      "type": "panel",
      "id": "barchart",
      "name": "Bar chart",
      "version": ""
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "table",
      "name": "Table",
      "version": ""
    }
  ],
  "title": "K8s \u2014 Namespace Overview",
  "style": "dark",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "tags": [
    "kubernetes",
    "namespace",
    "overview"
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "refresh": 1,
        "label": "Prometheus"
      },
      {
        "name": "namespace",
        "label": "Namespace",
        "type": "query",
        "refresh": 2,
        "multi": false,
        "includeAll": false,
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "definition": "label_values(kube_pod_info, namespace)",
        "query": {
          "query": "label_values(kube_pod_info, namespace)",
          "refId": "VarA"
        },
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 101,
      "type": "gauge",
      "title": "CPU % of Cluster (Namespace)",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nsum by (namespace) (\n  rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}[5m])\n) / scalar(sum(kube_node_status_allocatable{resource=\"cpu\", unit=~\"core|cores\"}))",
          "legendFormat": "{{$namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "showThresholdMarkers": true,
        "showThresholdLabels": false
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "orange",
                "value": 60
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 102,
      "type": "gauge",
      "title": "RAM % of Cluster (Namespace)",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nsum by (namespace) (\n  container_memory_working_set_bytes{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}\n) / scalar(sum(kube_node_status_allocatable{resource=\"memory\", unit=\"byte\"}))",
          "legendFormat": "{{$namespace}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "showThresholdMarkers": true,
        "showThresholdLabels": false
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "orange",
                "value": 60
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 103,
      "type": "barchart",
      "title": "Network Now \u2014 RX/TX (bytes/s)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (namespace) (rate(container_network_receive_bytes_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "RX",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        },
        {
          "exemplar": true,
          "expr": "sum by (namespace) (rate(container_network_transmit_bytes_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "TX",
          "refId": "B",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "orientation": "vertical",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "stacking": "normal",
        "showValue": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "decimals": 1
        },
        "overrides": []
      }
    },
    {
      "id": 104,
      "type": "timeseries",
      "title": "CPU % Trend (Namespace)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nsum by (namespace) (\n  rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}[5m])\n) / scalar(sum(kube_node_status_allocatable{resource=\"cpu\", unit=~\"core|cores\"}))",
          "legendFormat": "CPU %",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      }
    },
    {
      "id": 105,
      "type": "timeseries",
      "title": "RAM % Trend (Namespace)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nsum by (namespace) (\n  container_memory_working_set_bytes{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}\n) / scalar(sum(kube_node_status_allocatable{resource=\"memory\", unit=\"byte\"}))",
          "legendFormat": "RAM %",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      }
    },
    {
      "id": 106,
      "type": "bargauge",
      "title": "Top Pods by CPU (5m)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(10, sum by (pod) (\n  rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}[5m])\n))",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "displayMode": "basic",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "cores",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "orange",
                "value": 1
              },
              {
                "color": "red",
                "value": 2
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 107,
      "type": "bargauge",
      "title": "Top Pods by Memory",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(10, sum by (pod) (\n  container_memory_working_set_bytes{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}\n))",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "displayMode": "basic",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "orange",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 108,
      "type": "piechart",
      "title": "PVC Used % (Namespace)",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 0,
        "y": 24
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\nkubelet_volume_stats_used_bytes{namespace=\"$namespace\"}\n/ ignoring(persistentvolumeclaim) group_left\nkubelet_volume_stats_capacity_bytes{namespace=\"$namespace\"}",
          "legendFormat": "{{persistentvolumeclaim}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "pieType": "donut",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "displayLabels": [
          "name",
          "percent"
        ],
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent"
        },
        "overrides": []
      }
    },
    {
      "id": 109,
      "type": "piechart",
      "title": "Pods by Phase",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 8,
        "y": 24
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "count by (phase) (kube_pod_status_phase{namespace=\"$namespace\"})",
          "legendFormat": "{{phase}}",
          "refId": "A",
          "instant": true,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "pieType": "donut",
        "legend": {
          "displayMode": "list",
          "placement": "right"
        },
        "displayLabels": [
          "name",
          "value"
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    },
    {
      "id": 110,
      "type": "gauge",
      "title": "Namespace PVC Used % (Total)",
      "gridPos": {
        "h": 8,
        "w": 8,
        "x": 16,
        "y": 24
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "100 *\n(sum by (namespace) (kubelet_volume_stats_used_bytes{namespace=\"$namespace\"}))\n/ scalar(sum(kubelet_volume_stats_capacity_bytes{namespace=\"$namespace\"}))",
          "legendFormat": "PVC %",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green"
              },
              {
                "color": "orange",
                "value": 70
              },
              {
                "color": "red",
                "value": 90
              }
            ]
          }
        },
        "overrides": []
      }
    }
  ]
}
