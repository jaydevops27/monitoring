{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.5.0"
    },
    {
      "type": "panel",
      "id": "piechart",
      "name": "Pie chart",
      "version": ""
    },
    {
      "type": "panel",
      "id": "state-timeline",
      "name": "State timeline",
      "version": ""
    },
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": ""
    },
    {
      "type": "panel",
      "id": "table",
      "name": "Table",
      "version": ""
    },
    {
      "type": "panel",
      "id": "bargauge",
      "name": "Bar gauge",
      "version": ""
    }
  ],
  "title": "K8s \u2014 Pods Detail",
  "style": "dark",
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "tags": [
    "kubernetes",
    "pods",
    "detail"
  ],
  "templating": {
    "list": [
      {
        "name": "DS_PROMETHEUS",
        "type": "datasource",
        "query": "prometheus",
        "refresh": 1,
        "label": "Prometheus"
      },
      {
        "name": "namespace",
        "label": "Namespace",
        "type": "query",
        "refresh": 2,
        "multi": false,
        "includeAll": false,
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "definition": "label_values(kube_pod_info, namespace)",
        "query": {
          "query": "label_values(kube_pod_info, namespace)",
          "refId": "VarA"
        },
        "sort": 1
      },
      {
        "name": "pod",
        "label": "Pod",
        "type": "query",
        "refresh": 2,
        "multi": true,
        "includeAll": true,
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "definition": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
        "query": {
          "query": "label_values(kube_pod_info{namespace=\"$namespace\"}, pod)",
          "refId": "VarB"
        },
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 201,
      "type": "timeseries",
      "title": "CPU by Pod (cores)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (pod) (\n  rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}[5m])\n)",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "cores"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      }
    },
    {
      "id": 202,
      "type": "timeseries",
      "title": "Memory by Pod (bytes)",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (pod) (\n  container_memory_working_set_bytes{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}\n)",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      }
    },
    {
      "id": 203,
      "type": "timeseries",
      "title": "Network RX by Pod (bytes/s)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (pod) (rate(container_network_receive_bytes_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      }
    },
    {
      "id": 204,
      "type": "timeseries",
      "title": "Network TX by Pod (bytes/s)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (pod) (rate(container_network_transmit_bytes_total{namespace=\"$namespace\"}[5m]))",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "right",
          "showLegend": true
        }
      }
    },
    {
      "id": 205,
      "type": "bargauge",
      "title": "Top Pods by CPU (5m)",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 17
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(15, sum by (pod) (\n  rate(container_cpu_usage_seconds_total{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}[5m])\n))",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "displayMode": "basic",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "cores"
        },
        "overrides": []
      }
    },
    {
      "id": 206,
      "type": "bargauge",
      "title": "Top Pods by Memory",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 17
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "topk(15, sum by (pod) (\n  container_memory_working_set_bytes{namespace=\"$namespace\",container!~\"POD|\", image!=\"\"}\n))",
          "legendFormat": "{{pod}}",
          "refId": "A",
          "instant": false,
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "options": {
        "displayMode": "basic",
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      }
    },
    {
      "id": 207,
      "type": "state-timeline",
      "title": "Pod Phase Timeline",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 25
      },
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "exemplar": true,
          "expr": "sum by (pod, phase) (kube_pod_status_phase{namespace=\"$namespace\"})",
          "legendFormat": "{{pod}} {{phase}}",
          "refId": "A",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none"
        },
        "overrides": []
      }
    }
  ]
}
